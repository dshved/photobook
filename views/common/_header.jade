header.header__cover
	.header__author-panel
		.author__photo-container
			.author__photo-frame
				img.author__photo(src= user.avatar || '/img/default_avatar.jpg', alt= user.name)
		.author__information-container
			h1.author__name= user.name
			p.author__about= user.description || 'Заполните описание...'
			+social('socials', [['soc_vk', 'https://vk.com', 'Вконтакте'], ['soc_fb', 'https://facebook.com', 'Facebook'], ['soc_twitter', 'https://twitter.com', 'twitter'], ['social_google', 'https://google.com', 'G+'], ['soc_email', '#', 'Mail']])
		.author__controls
			ul.control__list
				li.control__item
					a.control__link(href="#" id="edit")
						svg.svg__icon_controls
							use(xmlns:xlink="http://www.w3.org/1999/xlink", xlink:href= "/sprites/svg/symbol/bg-sprite.svg#icon-edit")
				li.control__item
					a.control__link(href="#" id="logout")
						svg.svg__icon_controls
							use(xmlns:xlink="http://www.w3.org/1999/xlink", xlink:href= "/sprites/svg/symbol/bg-sprite.svg#icon-off")
	.header__search-panel
		form.form__search(action="")
			input.search__form(type="search" id="search_form" name="search" placeholder="Исследовать мир" )
			label.label__search(for="search_form")
				svg.svg__icon_search
					use(xmlns:xlink="http://www.w3.org/1999/xlink", xlink:href= "/sprites/svg/symbol/bg-sprite.svg#icon-search")
	.modal__window_popup.close